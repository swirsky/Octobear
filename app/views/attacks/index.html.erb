<p id="notice"><%= notice %></p>

<h1>Listing Attacks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Damage</th>
      <th>Effect</th>
      <th>Critchance</th>
      <th>Tohit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attacks.each do |attack| %>
      <tr>
        <td><%= attack.name %></td>
        <td><%= attack.type %></td>
        <td><%= attack.damage %></td>
        <td><%= attack.effect %></td>
        <td><%= attack.critchance %></td>
        <td><%= attack.tohit %></td>
        <td><%= link_to 'Show', attack %></td>
        <td><%= link_to 'Edit', edit_attack_path(attack) %></td>
        <td><%= link_to 'Destroy', attack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

