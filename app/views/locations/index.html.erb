<h1>Listing Locations for <%= @campaign.name %></h1>
<%= link_to "Back", @campaign %>
<br/><br/>
<p><strong>Import Locations</strong></p>
<%= form_tag import_locations_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= hidden_field_tag :campaign_id, @campaign.id %>
  <%= submit_tag "Import" %>
<% end %>
<p><strong>Download Locations:</strong> <%= link_to "CSV", locations_path(campaign_id:@campaign.id, format: "csv") %></p>


<table class='table table-hover'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.description %></td>
        <td><%= location.notes %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path(campaign_id:@campaign.id) %>
