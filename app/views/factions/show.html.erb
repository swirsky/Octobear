<div style='width:50%;'>
<%= render partial: "allegiances/index", locals: {list_name:'NPC', allegiances:@faction.allegiances, base:@faction} %>
<p>
  <strong>Name:</strong>
  <%= @faction.name %>
</p>

<% if @faction.leader %>
<p>
  <strong>Leader:</strong>
  <%= link_to @faction.leader_name, @faction.leader %>
  </p>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @faction.description %>
</p>

<p>
  <strong>Main Type:</strong>
  <%= @faction.main_type %>
</p>

<p>
  <strong>Subtype:</strong>
  <%= @faction.subtype %>
</p>

<p>
  <strong>Headquarters:</strong>
<% if @faction.location.nil? %>
  <%= @faction.headquarters %>
<% else %>
  <%= link_to @faction.headquarters, @faction.location %>
<% end %>
</p>

<p>
  <strong>Influence:</strong>
  <%= @faction.influence %>
</p>

<p>
  <strong>Strength:</strong>
  <%= @faction.strength %>
</p>

<p>
  <strong>Secret:</strong>
  <%= @faction.secret %>
</p>

<%= link_to 'Edit', edit_faction_path(@faction) %> |
<%= link_to 'Back', factions_path(campaign_id:@campaign.id) %>
</div>
